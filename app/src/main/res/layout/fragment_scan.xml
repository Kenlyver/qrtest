<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#616161"
        tools:context=".ui.fragment.ScanFragment">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFlash"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_flashlight_off"
                android:background="@drawable/flash_selector"
                tools:ignore="MissingConstraints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
        />
        <FrameLayout
                android:id="@+id/containerScan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@+id/imgFlash" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

        </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>